<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Update user</title>
</head>

<body>
    <div class="edit-user-container">
        <form action="/update-user" method="POST">
            <div><b>Update user</b></div>
            <div>
                <label for="lname">Last Name:</label>
                <input id="lname" name="lastName" value="<%= dataUser.lastName %>" />
            </div>
            <div>
                <label for="fname">First Name:</label>
                <input id="fname" name="firstName" value="<%= dataUser.firstName %>" />
            </div>
            <div>
                <label for="email">Email:</label>
                <input id="email" type="email" name="email" value="<%= dataUser.email %>" />
            </div>
            <div>
                <label for="address">Address:</label>
                <input id="address" name="address" value="<%= dataUser.address %>" />
            </div>
            <input hidden value="<%= dataUser.id %>" name="id" />
            <button type="submit" class="btn-submit">Save</button>
        </form>
    </div>
</body>

</html>